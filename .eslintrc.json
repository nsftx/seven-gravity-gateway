{
  "parserOptions": {
    "ecmaVersion": 6
  },
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true
  },
  "extends": "eslint:recommended",
  "rules": {
    "quotes": [
      "error",
      "single"
    ],
    "indent": [
      "error",
      4
    ],
    "semi": [
      "error",
      "always"
    ],
    "no-console": "off",
    "eqeqeq": [
      "error",
      "always"
    ],
    "no-undef": "error",
    "no-unused-vars": "error",
    "no-multi-assign": "error"
  }
}